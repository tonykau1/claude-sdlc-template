{
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "Glob(*)",
      "Grep(*)",
      "Bash(*)",
      "Bash(curl:*)",
      "Bash(npm:*)",
      "Bash(npm run:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run build:*)",
      "Bash(npx:*)",
      "Bash(npx tsx:*)",
      "Bash(npx tsc:*)",
      "Bash(npx eslint:*)",
      "Bash(npx prettier:*)",
      "Bash(npx jest:*)",
      "Bash(npx vitest:*)",
      "Bash(node:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(git:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(make:*)",
      "Bash(pytest:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "WebFetch(*)",
      "WebSearch(*)",
      "Task(*)",
      "TodoWrite(*)",
      "NotebookEdit(*)",
      "Bash(/dev/null)"
    ],
    "deny": [
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(rm -rf ./*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(git push origin main:*)",
      "Bash(git push origin master:*)",
      "Bash(git commit*main*)",
      "Bash(git commit*master*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(chmod 777:*)",
      "Bash(chown:*)",
      "Bash(*DROP DATABASE*)",
      "Bash(*DROP TABLE*)",
      "Bash(*DELETE FROM*)",
      "Bash(*TRUNCATE*)",
      "Write(.env)",
      "Write(.env.production)",
      "Write(.env.local)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "UserPromptSubmit": [".claude/hooks/UserPromptSubmit-skill-activation.sh"],
    "PostToolUse": [".claude/hooks/PostToolUse-tracker.sh"]
  }
}
